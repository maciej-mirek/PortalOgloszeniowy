
@{
    ViewData["Title"] = @ViewBag.Advert.Title;
    int counter = 0;
}


<div class="container">
    <div class="row">
        <div class="col-8 border">
            <div class="h4 text-center">
                @ViewBag.Advert.Title
            </div>
            <img class="rounded mx-auto d-block" width="70%"src="@ViewBag.Advert.ImageUrl" />
            <p class="mt-3">
                @ViewBag.Advert.Description
            </p>
    

            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">



      @foreach(var img in ViewBag.Gallery)
      {
          if(counter == 0)
          {
           <div class="carousel-item active ">
            <img src="@img.ImageUrl" class="d-block w-100" alt="">
            </div>                  
          }
        <div class="carousel-item ">
            <img src="@img.ImageUrl" class="d-block w-100" alt="">
        </div>    
        counter=counter+1;
      }

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>






        </div>







        <div class="col-4 border">
            <img class="rounded p-2 mx-auto d-block" width="40%" src="/images/avatar.png"/>
            <p class="text-center"> Autor Ogłoszenia: @ViewBag.AdvertOwner.FirstName </p>
             <p class="number-info text-center">Zobacz numer telefonu</p> <p class="d-none text-center number"> @ViewBag.AdvertOwner.PhoneNumber </p>
                        <h3 class="text-center mt-4">@ViewBag.Advert.Price zł</h3>
            <div class="mt-5">Lokalizacja: @ViewBag.Advert.Location</div>
            <div class="mt-2">Dodano @ViewBag.Advert.Created_at</div>
         </div>
 


        </div>
    </div>
    <div>
    <p class="mt-3 text-end">Wyświetlenia: @ViewBag.Advert.ViewsCount</p>
</div>

