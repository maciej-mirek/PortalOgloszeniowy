@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

    
<flash dismissable="true" />

<h2 class="text-lg-end">Witaj @ViewBag.User.FirstName</h2>
<h4 class="mt-3">Twoje ogłoszenia</h4>

<table class="table table-bordered mt-3">
    <thead>
    <tr>
      <th scope="col">Tytuł</th>
      <th scope="col">Data Dodania</th>
      <th scope="col">Wyświetlenia</th>
      <th scope="col">Premium</th>
      <th scope="col">Akcje</th>
    </tr>
  </thead>
  <tbody>
@foreach(var adv in ViewBag.Adverts)
{
    <tr>
      <th scope="row">
          <a href="/advert/@adv.slug">@adv.Title  @adv.Id</a> <br/>
      </th>
      <td>@adv.Created_at</td>
      <td>@adv.ViewsCount</td>
      <td>
          @if(@adv.isPremium == false)
             {
                 <input type="button" data-bs-toggle="modal" data-bs-target="#ModalPremium" class="btn btn-success" value="Ulepsz"/>
                  <div class="modal fade" id="ModalPremium" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Premium</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        Ulepsz swoje ogłoszenie. <br/>
                        <label>Podaj numer karty kredytowej.</label>
                        <input type="text"/>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                    <a type="submit" class="btn btn-confirm" asp-route-Id="@adv.Id"  asp-controller="Advert" asp-action="PremiumAdvert">Potwierdź</a>

                      </div>
                 </div>     
            </div>
        </div>

             }
          else
             {
                        <button type="button" disabled class="btn btn-success">Ulepsz</button>
             }
      </td>
      <td>


        <button type="button" class="btn-danger btn" data-toggle="ajax-modal" data-target="#addEmployee"
            data-url="@Url.Action($"Advert/ModalAdvert/{@adv.Id}")">Usuń</button>
                
        <div id="PlaceHolderHere"> </div>
         

      </td>
    </tr>

      
}
</tbody>
</table>


